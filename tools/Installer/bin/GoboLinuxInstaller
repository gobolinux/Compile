def safeRun(cmd, context = '', showProgress = 0, logger = None) :
	l = []
	try :
		if reallyInstall :
			(i,oe) = os.popen4(cmd)
			while 1 :
				line = oe.readline()

				if not line :
					break

				if showProgress :
					if logger :
						logger.append(line)

					print line,
					sys.stdout.flush()

				l.append(line.strip())
			oe.close()
			return l
		else :
			if logger :
				logger.append('===%s===='%context)
				logger.append(cmd)
				logger.append('=======\n')


			print '===%s===='%context
			print cmd
			print '=======\n\n'
			return []
	except Exception, inst:
		if logger :
			logger.append('Error running '+cmd)
			logger.append(str(inst))
		print 'Error running '+cmd
		print str(inst)

