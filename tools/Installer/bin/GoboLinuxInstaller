# 			o += 'BootProto=DHCP'+ '   # DHCP (requires DHCPCD package), Static (default if empty)\n\n'
# 		else :
# 			o += '#BootProto=Static'+ '   # DHCP (requires DHCPCD package), Static (default if empty)\n\n'
# 
# 		fieldsT = [ 'IP', 'NetMask', 'Broadcast' ] 
