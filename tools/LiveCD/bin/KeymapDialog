  "qwerty/defkeymap.map" "" \
  "qwerty/defkeymap_V1.0.map" "" \
  "qwerty/dk-latin1.map" "" \
  "qwerty/dk.map" "" \
  "qwerty/emacs.map" "" \
  "qwerty/emacs2.map" "" \
  "qwerty/es-cp850.map" "" \
  "qwerty/es.map" "" \
  "qwerty/et-nodeadkeys.map" "" \
